#!groovy

pipeline {
  agent {
    docker {
      image 'geodynamics/burnman-buildenv-bionic-python3'
      alwaysPull true
    }
  }

  options {
    timeout(time: 2, unit: 'HOURS')
  }

  post { always { cleanWs() } }

  stages {
    stage('Bionic Python 3') {
      steps {
        sh 'PYTHON=python3 ./test.sh'
      }
    }
  }
}
